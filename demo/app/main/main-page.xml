<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-skygear-sdk">
   <ActionBar class="action-bar text-center" title="Main">
      <android>
        <NavigationButton android.systemIcon="ic_menu_info_details" tap="showSideDrawer" />
      </android>
      <ios>
        <ActionItem text="menu" ios.position="left" tap="showSideDrawer" />
      </ios>
    </ActionBar>
  <ActivityIndicator busy="{{ isLoading }}" />
  <StackLayout>
    <Label text="{{ message }}" class="t-20 text-center c-black" textWrap="true"/>
    <StackLayout>
      <Label
      class="text-center"
      text="{{users ? 'users: ' + users.length : 'users: 0'}}"
      backgroundColor="black"
      color="white"/>
    </StackLayout>
    <ScrollView>
    <ListView
    items="{{ users }}"
    itemTap="{{userActions}}"
    class="list-group" id="listView">
      <ListView.itemTemplate>
        <StackLayout class="list-group-item">
          <Label text="{{username}}" textWrap="true" class="title" height="100%" />
        </StackLayout>
      </ListView.itemTemplate>
    </ListView>
  </ScrollView>
  <Button text="Login" tap="{{loginOrRegister}}" class="btn btn-primary btn-active" />
  </StackLayout>
</Page>