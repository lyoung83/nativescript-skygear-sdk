<nsDrawer:RadSideDrawer xmlns:nsDrawer="nativescript-ui-sidedrawer">
    <nsDrawer:RadSideDrawer.drawerContent>
        <StackLayout backgroundColor="honeydew">
        <StackLayout backgroundColor="darkslategray" color="white" height="56" style="text-align: center; vertical-align: center; margin-bottom: 40;">
                <Label text="Navigation Menu"/>
        </StackLayout>
            <Button color="white" class="btn btn-primary" text="Home" tap="navigateToMain"/>
            <Button color="white" class="btn btn-primary" text="Conversations" tap="navigateToConversations" />
            <Button color="white" class="btn btn-primary" text="Todos" tap="navigateToTodos" />
            <Button color="white" class="btn btn-primary" text="Pubsub" tap="navigateToPubsub" />
            <StackLayout>
                <Button class="btn btn-outline btn-active btn-rounded-lg btn-def" tap="logout"  id="buttonLogin"  text="Log out" />
            </StackLayout>
        </StackLayout>
    </nsDrawer:RadSideDrawer.drawerContent>

    <nsDrawer:RadSideDrawer.mainContent>
        <Frame id="root" defaultPage="login/login-page" />
    </nsDrawer:RadSideDrawer.mainContent>
</nsDrawer:RadSideDrawer>
